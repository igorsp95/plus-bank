 <%= simple_form_for [@bank_account, @transaction] do |f| %>
  <div class="form-group">
    <div class="">
      <%= f.input :transaction_type, label:'Tipo de Transação', collection:['Saque', 'Depósito', 'Transferência'], class: "form-control" %>
      <%= f.input :account_receiver, label: 'Número da Conta:', as: :string, placeholder: 'ex: 902317', class: "form-control" %>
      <%= f.input :amount, label: 'Valor:', as: :decimal, placeholder: 'R$ 00,00', class: "form-control" %>
    </div>
  </div>
  <%= f.button :submit, "Fazer Transação", class: 'btn-primary', style: 'width: 100%'%>
<% end %>
