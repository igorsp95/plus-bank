<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top mb-4">
  <%= link_to root_path, class: "navbar-brand ml-2" do %>
    <i class="fas fa-comment-dollar"></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "My Accounts", bank_accounts_path(@bank_account), class: "nav-link text-light" %>
        </li>
        <li class="nav-item dropdown ml-2 mr-3">
          <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Create new account", new_bank_account_path, class: "dropdown-item" %>
            <%= link_to "My accounts", bank_accounts_path(@bank_account), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path, class: "button-8 mr-2" %>
        </li>
        <li class="nav-item text-info">
          <%= link_to "Sign up", new_user_registration_path, class: "button-9" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
