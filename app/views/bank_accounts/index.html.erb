<div class="container">
  <div class="my-card">
    <div class="d-flex justify-content-between">
      <h1>Minhas Contas</h1>
      <%= link_to "Abrir Nova Conta", new_bank_account_path, class: "button-6" %>
    </div>
      <table  class="table table-striped table-bordered mt-3">
        <thead>
          <tr>
            <th scope="col">
              NÃºmero da Conta
            </th>
            <th scope="col">
              Saldo
            </th>
          </tr>
        </thead>
        <tbody>
          <% @bank_accounts.each do |bank_account| %>
            <% if bank_account.user == current_user  %>
              <tr>
                <td>
                  <%= link_to bank_account_path(bank_account.id), class:"bank-account-link" do %>
                    <%= bank_account.account_number %>
                  <% end %>
                </td>
                <td class="saldo-table">
                  <%= number_to_currency(bank_account.balance, unit: 'R$') %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
  </div>
</div>