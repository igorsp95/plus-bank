<div class="container">
  <div class="my-card">
    <div class="mb-4 loading skeleton skeleton-title">
      <h1 class="">Hello, <%= @user.first_name.capitalize %>!</h1>
    </div>
    <div class="d-flex justify-content-between">
      <div class="loading skeleton skeleton-subtitle">
        <h2>My Accounts</h2>
      </div>
      <div class="loading skeleton">
        <%= link_to "Create New Account", new_bank_account_path, class: "button-6" %>
      </div>
    </div>
    <div class=" loading skeleton skeleton-table">
      <table  class="table table-striped table-bordered mt-3">
        <thead>
          <tr>
            <th scope="col">
              Account Number
            </th>
            <th scope="col">
              Balance
            </th>
            <th scope="col">

            </th>
          </tr>
        </thead>
        <tbody>
          <% @bank_accounts.each do |bank_account| %>
            <% if bank_account.user == current_user  %>
              <tr>
                <td>
                  <%= link_to bank_account_path(bank_account.id), class:"bank-account-link" do %>
                    <%= bank_account.account_number %>
                  <% end %>
                </td>
                <td class="saldo-table">
                  <%= number_to_currency(bank_account.balance, unit: 'R$') %>
                </td>
                <td class="text-center">
                  <%= link_to "Extract", bank_account_path(bank_account.id), class: "button-8" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
</div>
